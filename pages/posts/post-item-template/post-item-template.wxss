.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date{
  display: flex;
  flex-direction: row;
  margin: 10rpx 0 20rpx 10rpx;
  align-items: center;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  background-color: #ededed;
  /* vertical-align: middle; 垂直居中*/
}

.post-date{
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}

.post-tittle{
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
  color: #333;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}

.post-content{
  font-size: 28rpx;
  color: #666;  /* 文章字体的一般颜色 */
  letter-spacing: 2rpx;
  margin: 0 0 20rpx 20rpx;
}

.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.post-like-image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  background-color: #ededed;
}

.post-like-text{
  margin-right: 40rpx;
}